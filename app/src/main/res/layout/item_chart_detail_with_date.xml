<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_chart_detail_type"
            android:layout_centerVertical="true"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/primary_text_color"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/tv_chart_detail_type"
            android:layout_width="wrap_content"
            android:id="@+id/tv_chart_detail_money"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/large_text_size"
            android:text="323"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_chart_detail_remark"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_chart_detail_money"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="ss"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/secondary_text_color"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_chart_detail_date"
            android:layout_width="wrap_content"
            android:text="2012"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/secondary_text_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <include layout="@layout/view_divider"></include>

</LinearLayout>