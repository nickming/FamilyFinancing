<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_book_item_height"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:cardElevation="3dp">

        <LinearLayout
            android:id="@+id/ll_account_book_item_container"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="@dimen/toolbar_icon_size"
                android:src="@mipmap/book_normal"
                android:layout_height="@dimen/toolbar_icon_size"
                android:id="@+id/iv_account_book_item_icon"/>

            <TextView
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/primary_text_color"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="323"
                android:id="@+id/tv_account_book_item_name"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>