<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bottom_chart"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_weight="1"
            android:src="@mipmap/ic_chart" />

        <ImageView
            android:id="@+id/iv_bottom_shares"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_weight="1"
            android:src="@mipmap/ic_shares" />

        <ImageView
            android:id="@+id/iv_bottom_add"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_weight="1"
            android:src="@mipmap/ic_add" />


        <ImageView
            android:id="@+id/iv_bottom_news"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_weight="1"
            android:src="@mipmap/ic_news" />

        <ImageView
            android:id="@+id/iv_bottom_setting"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_weight="1"
            android:src="@mipmap/ic_setting" />

    </LinearLayout>


</RelativeLayout>