<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_chart_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_chart_item_icon_background"
            android:layout_width="@dimen/record_type_item_icon_width"
            android:layout_height="@dimen/record_type_item_icon_width"
            android:layout_centerInParent="true"
            android:src="@color/icon_blue" />

        <ImageView
            android:id="@+id/iv_chart_item_icon"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_food"
            android:tint="@color/white" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_chart_item_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/rl_chart_icon_container"
        android:text="323"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/tv_chart_item_type_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:text="323"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/normal_text_size" />


    <TextView
        android:id="@+id/tv_chart_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="323"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        android:typeface="monospace" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:src="@color/gray" />
</RelativeLayout>
